package com.bit.day12;

public class Ex10 {
	public static void main(String[] args) {
		//java.util.Scanner sc= new java.util.Scanner(System.in);
		String msg = null;
		
		System.out.println("주민번호 입력");
		//msg = sc.nextLine();
		msg="951031-1124567";
		
		char year1 = msg.charAt(0);//'0'
		char year2 = msg.charAt(1);//'9'
		int year = (year1-'0')*10+(year2-'0')*1;
		
		int gender = msg.charAt(7);
		if(gender == '3'||gender=='4'){
			System.out.println("당신은"+(2020-(2000+year)+1)+"세");
		}else if(gender == '1'||gender=='2'){
			System.out.println("당신은"+(2020-(1800+year)+1)+"세");
		}	
		
		if(gender == '1'||gender=='3'){
			System.out.println("남자입니다");
		}else if(gender == '2'||gender=='4'){
			System.out.println("du자입니다");
		}
	}
}
