package src.com.bit.day11;

public class Ex06 {
    public static void main(String[] args) {
        //주민번호 입력:090206-3124567
        //>>당신은 00세 남자입니다
        java.util.Scanner sc = new java.util.Scanner(System.in);
        int[] arr = new int[13];
        for(int i =0; i<arr.length; i++){
            
            if(arr[i] == arr[5]){
                arr[i] = (int)'-';
                System.out.println(arr[i]);
            } 
            arr[i] = sc.nextInt();
        }
        for(int i = 0; i<arr.length; i++){
            
            if(arr[i] == arr[5]){
                arr[i] = (int)'-';
                System.out.println(arr[i]);
            } 
            System.out.print(arr[i]);
        }
        System.out.print(arr);

        //주민번호 입력:990206-2124567
        //>>당신은 00세 여자입니다


        //주민번호 입력9902062124567
        //입력패턴을 다시확인하세요(000000-0000000)
        //주민번호 입력99020602124567
        //입력패턴을 다시확인하세요(000000-0000000)
        //주민번호 입력990206-212456
        //주민번호 자릿수를 다시 확인하세요
    }
}